import pyautogui
import time

# to exit take your cursor to any corner and stay there for 30 seconds
# print(pyautogui.position()) use this to get the position of the first word of the last line sent.
# get screen
pyautogui.click(458,972)  # enter the X,Y coordinates down as well where you see mine.
time.sleep(0.5)
message = "pls search"
while True:
    # pls beg -- 0
    pyautogui.typewrite("pls beg")
    pyautogui.press('enter')
    # pls search -- 0
    time.sleep(1)
    pyautogui.typewrite(message)
    pyautogui.press('enter')
    time.sleep(1.5)
    pyautogui.doubleClick(458,972)  # change the XY co ordinates according to screen resoultion
    pyautogui.hotkey('ctrl', 'c')
    pyautogui.hotkey('ctrl', 'v')
    pyautogui.press('enter')
    pyautogui.typewrite("pls dep max")
    pyautogui.press('enter')
    time.sleep(29)
    # pls search -- 30
    pyautogui.typewrite(message)
    pyautogui.press('enter')
    time.sleep(3)
    pyautogui.doubleClick(458,972)  # change the XY co ordinates according to screen resoultion
    pyautogui.hotkey('ctrl', 'c')
    pyautogui.hotkey('ctrl', 'v')
    pyautogui.press('enter')
    pyautogui.typewrite("pls dep max")
    pyautogui.press('enter')
    # pls beg -- 45
    time.sleep(12)
    pyautogui.typewrite("pls beg")
    pyautogui.press('enter')
    time.sleep(15)
    # pls search --60
    pyautogui.typewrite(message)
    pyautogui.press('enter')
    time.sleep(3)
    pyautogui.doubleClick(458,972)  # change the XY co ordinates according to screen resoultion
    pyautogui.hotkey('ctrl', 'c')
    pyautogui.hotkey('ctrl', 'v')
    pyautogui.press('enter')
    pyautogui.typewrite("pls dep max")
    pyautogui.press('enter')
    time.sleep(27)
    # time -- 130 cycle repeats
